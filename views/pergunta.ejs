<%- include ("partials/header.ejs") %>
<body> 
    <%- include ("partials/navbar.ejs") %>
    <div class="container">
        <hr>
        <h1><%= pergunta.titulo %></h1>
        <p><%= pergunta.descricao %></p>
        <hr>
        <form action="/responder" method="POST">
            <h3>Responda</h3>
            <label>Reposta:</label>
            <textarea placeholder="digite sua resposta" class="form-control" name="corpo" ></textarea><br>
            <input type="hidden" name="pergunta" value="<%= pergunta.id %>">
            <button type="submit" class="btn btn-primary">Responder</button>
        </form>
        <hr>
        <h3>Repostas</h3>
        <hr>
        <% respostas.forEach(resposta => {%>
            <div class="card">
                <br>
                <div class="card-body">
                    <%= resposta.corpo %> 
                </div>
            </div>
        <%})%>
    </div>

</body>

<%- include ("partials/footer.ejs") %>



